<script>
  function initJourneyAnimations() {
    // @ts-ignore
    const gsap = window.gsap;
    // @ts-ignore
    const ScrollTrigger = window.ScrollTrigger;
    
    if (!gsap || !ScrollTrigger) return;

    gsap.registerPlugin(ScrollTrigger);

    // Refresh ScrollTrigger to ensure positions are correct
    ScrollTrigger.refresh();

    // Elegant Hero Reveal
    const heroTl = gsap.timeline({ defaults: { ease: "power3.out" } });
    heroTl.fromTo('.hero-animate', 
      { opacity: 0, y: 40 },
      { opacity: 1, y: 0, duration: 1.2, stagger: 0.15 }
    );

    // Standard Reveal Elements
    gsap.utils.toArray('.reveal').forEach((el: Element) => {
      gsap.fromTo(el, 
        { opacity: 0, y: 50 },
        {
          opacity: 1,
          y: 0,
          duration: 1,
          ease: 'power3.out',
          scrollTrigger: {
            trigger: el,
            start: 'top 85%',
            toggleActions: 'play none none reverse'
          }
        }
      );
    });

    // Image Scale Reveal
    gsap.utils.toArray('.reveal-scale').forEach((el: Element) => {
      gsap.fromTo(el,
        { opacity: 0, scale: 0.95 },
        {
          opacity: 1,
          scale: 1,
          duration: 1.2,
          ease: 'power2.out',
          scrollTrigger: {
            trigger: el,
            start: 'top 80%',
            toggleActions: 'play none none reverse'
          }
        }
      );
    });

    // Staggered Grids
    gsap.utils.toArray('.reveal-stagger').forEach((container: Element) => {
      const items = container.children;
      gsap.fromTo(items,
        { opacity: 0, y: 30 },
        {
          opacity: 1,
          y: 0,
          duration: 0.8,
          stagger: 0.1,
          ease: 'power3.out',
          scrollTrigger: {
            trigger: container,
            start: 'top 80%',
            toggleActions: 'play none none reverse'
          }
        }
      );
    });

    // Timeline Animations - New Vertical Design
    const timelineLine = document.querySelector('.timeline-line');
    if (timelineLine) {
      gsap.fromTo(timelineLine,
        { scaleY: 0 },
        {
          scaleY: 1,
          duration: 1.5,
          ease: 'power3.inOut',
          scrollTrigger: {
            trigger: '.timeline-container',
            start: 'top 70%',
            end: 'bottom 70%',
            scrub: 1
          }
        }
      );
    }

    // Timeline Items
    const timelineItems = document.querySelectorAll('.timeline-item');
    timelineItems.forEach((item, index) => {
      // Content fade in
      gsap.fromTo(item,
        { opacity: 0, y: 30 },
        {
          opacity: 1,
          y: 0,
          duration: 0.8,
          ease: 'power3.out',
          scrollTrigger: {
            trigger: item,
            start: 'top 85%',
            toggleActions: 'play none none reverse'
          }
        }
      );

      // Dot pop in
      const dot = item.querySelector('.timeline-dot');
      if (dot) {
        gsap.fromTo(dot,
          { scale: 0, opacity: 0 },
          {
            scale: 1,
            opacity: 1,
            duration: 0.6,
            delay: 0.2,
            ease: 'back.out(1.7)',
            scrollTrigger: {
              trigger: item,
              start: 'top 85%',
              toggleActions: 'play none none reverse'
            }
          }
        );
      }
    });
  }

  // Run on load
  document.addEventListener('DOMContentLoaded', initJourneyAnimations);
  
  // Run on Astro page navigation (if View Transitions used)
  document.addEventListener('astro:page-load', initJourneyAnimations);
</script>
