---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Begin Your Journey" description="Start the conversation that leads to your bespoke Bali transformation. Tell us who you are and what you seek.">
  <!-- Hero -->
  <section class="relative h-[60vh] flex items-center justify-center bg-stone-900 overflow-hidden">
    <div class="absolute inset-0 bg-linear-to-b from-stone-900/60 via-stone-900/40 to-stone-900/80 z-10"></div>
    <div class="absolute inset-0 bg-[url('/images/hero/lempuyang-gate.webp')] bg-cover bg-center"></div>
    
    <div class="relative z-20 text-center px-6 max-w-4xl mx-auto">
      <p class="hero-animate text-gold-500 text-xs uppercase tracking-[0.3em] mb-6">The First Step</p>
      <h1 class="hero-animate hero-animate-delay-1 font-serif text-5xl md:text-6xl lg:text-7xl text-stone-50 leading-tight">
        Begin the<br/>Conversation
      </h1>
    </div>
  </section>

  <!-- Intro -->
  <section class="section-padding bg-stone-50">
    <div class="max-w-3xl mx-auto text-center">
      <div class="prose-luxury text-center">
        <p>
          This is not a booking form. It is an invitation to share who you are 
          and what you seek. From this beginning, we will craft a journey that 
          exists only for you.
        </p>
        <p>
          Take your time. There are no wrong answers. The more you share, the 
          more deeply we can understand the transformation that awaits you.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Form -->
  <section class="section-padding bg-stone-100">
    <div class="max-w-3xl mx-auto">
      <form id="journeyForm" class="space-y-10">
        <!-- Personal Information -->
        <div class="bg-stone-50 p-8 md:p-12 border border-stone-200">
          <h2 class="font-serif text-2xl text-stone-900 mb-8">About You</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="firstName" class="block text-xs uppercase tracking-widest text-stone-600 mb-3">First Name</label>
              <input 
                type="text" 
                id="firstName" 
                name="firstName" 
                class="w-full px-4 py-3 bg-white border border-stone-200 focus:border-gold-500 focus:outline-none transition-colors"
                required
              />
            </div>
            
            <div>
              <label for="lastName" class="block text-xs uppercase tracking-widest text-stone-600 mb-3">Last Name</label>
              <input 
                type="text" 
                id="lastName" 
                name="lastName" 
                class="w-full px-4 py-3 bg-white border border-stone-200 focus:border-gold-500 focus:outline-none transition-colors"
                required
              />
            </div>
            
            <div>
              <label for="email" class="block text-xs uppercase tracking-widest text-stone-600 mb-3">Email</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                class="w-full px-4 py-3 bg-white border border-stone-200 focus:border-gold-500 focus:outline-none transition-colors"
                required
              />
            </div>
            
            <div>
              <label for="phone" class="block text-xs uppercase tracking-widest text-stone-600 mb-3">Phone (Optional)</label>
              <input 
                type="tel" 
                id="phone" 
                name="phone" 
                class="w-full px-4 py-3 bg-white border border-stone-200 focus:border-gold-500 focus:outline-none transition-colors"
              />
            </div>
          </div>
        </div>

        <!-- Journey Details -->
        <div class="bg-stone-50 p-8 md:p-12 border border-stone-200">
          <h2 class="font-serif text-2xl text-stone-900 mb-8">Your Journey</h2>
          
          <div class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="travelers" class="block text-xs uppercase tracking-widest text-stone-600 mb-3">Number of Travelers</label>
                <select 
                  id="travelers" 
                  name="travelers" 
                  class="w-full px-4 py-3 bg-white border border-stone-200 focus:border-gold-500 focus:outline-none transition-colors"
                >
                  <option value="">Select...</option>
                  <option value="1">Solo Journey</option>
                  <option value="2">Two Travelers</option>
                  <option value="3-4">Small Group (3-4)</option>
                  <option value="5+">Larger Group (5+)</option>
                </select>
              </div>
              
              <div>
                <label for="duration" class="block text-xs uppercase tracking-widest text-stone-600 mb-3">Approximate Duration</label>
                <select 
                  id="duration" 
                  name="duration" 
                  class="w-full px-4 py-3 bg-white border border-stone-200 focus:border-gold-500 focus:outline-none transition-colors"
                >
                  <option value="">Select...</option>
                  <option value="5-7">5-7 Days</option>
                  <option value="8-10">8-10 Days</option>
                  <option value="11-14">11-14 Days</option>
                  <option value="15+">15+ Days</option>
                  <option value="flexible">Flexible</option>
                </select>
              </div>
            </div>
            
            <div>
              <label for="timing" class="block text-xs uppercase tracking-widest text-stone-600 mb-3">When Are You Considering?</label>
              <input 
                type="text" 
                id="timing" 
                name="timing" 
                placeholder="e.g., March 2026, or 'within the next 6 months'"
                class="w-full px-4 py-3 bg-white border border-stone-200 focus:border-gold-500 focus:outline-none transition-colors"
              />
            </div>
          </div>
        </div>

        <!-- Intentions -->
        <div class="bg-stone-50 p-8 md:p-12 border border-stone-200">
          <h2 class="font-serif text-2xl text-stone-900 mb-4">Your Intentions</h2>
          <p class="text-stone-600 mb-8">
            These questions help us understand the journey that calls to you. 
            Share as much or as little as feels right.
          </p>
          
          <div class="space-y-8">
            <div>
              <label for="seeking" class="block text-xs uppercase tracking-widest text-stone-600 mb-3">
                What Are You Seeking?
              </label>
              <textarea 
                id="seeking" 
                name="seeking" 
                rows="4"
                placeholder="What draws you to Bali? What would make this journey meaningful?"
                class="w-full px-4 py-3 bg-white border border-stone-200 focus:border-gold-500 focus:outline-none transition-colors resize-none"
              ></textarea>
            </div>
            
            <div>
              <label class="block text-xs uppercase tracking-widest text-stone-600 mb-4">
                Which Pillars Call to You?
              </label>
              <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <label class="flex items-center gap-3 p-4 border border-stone-200 bg-white cursor-pointer hover:border-gold-400 transition-colors">
                  <input type="checkbox" name="pillars" value="adventure" class="w-4 h-4 accent-gold-600" />
                  <span class="text-stone-700">Adventure</span>
                </label>
                <label class="flex items-center gap-3 p-4 border border-stone-200 bg-white cursor-pointer hover:border-gold-400 transition-colors">
                  <input type="checkbox" name="pillars" value="spirituality" class="w-4 h-4 accent-gold-600" />
                  <span class="text-stone-700">Spirituality</span>
                </label>
                <label class="flex items-center gap-3 p-4 border border-stone-200 bg-white cursor-pointer hover:border-gold-400 transition-colors">
                  <input type="checkbox" name="pillars" value="culture" class="w-4 h-4 accent-gold-600" />
                  <span class="text-stone-700">Culture</span>
                </label>
              </div>
            </div>
            
            <div>
              <label for="transformation" class="block text-xs uppercase tracking-widest text-stone-600 mb-3">
                How Would You Like to Feel When You Return Home?
              </label>
              <textarea 
                id="transformation" 
                name="transformation" 
                rows="4"
                placeholder="What transformation would make this journey worthwhile?"
                class="w-full px-4 py-3 bg-white border border-stone-200 focus:border-gold-500 focus:outline-none transition-colors resize-none"
              ></textarea>
            </div>
            
            <div>
              <label for="anything" class="block text-xs uppercase tracking-widest text-stone-600 mb-3">
                Anything Else We Should Know?
              </label>
              <textarea 
                id="anything" 
                name="anything" 
                rows="4"
                placeholder="Special requirements, interests, concerns, or anything else you'd like to share..."
                class="w-full px-4 py-3 bg-white border border-stone-200 focus:border-gold-500 focus:outline-none transition-colors resize-none"
              ></textarea>
            </div>
          </div>
        </div>

        <!-- Submit -->
        <div class="text-center">
          <button type="submit" class="btn-luxury">
            Send Your Intentions
          </button>
          <p class="text-stone-500 text-sm mt-6">
            We will respond within 48 hours to begin our conversation.
          </p>
        </div>
      </form>
    </div>
  </section>

  <!-- Alternative Contact -->
  <section class="section-padding bg-stone-900 text-stone-50">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="font-serif text-3xl md:text-4xl text-stone-50 mb-6">
        Prefer to Speak Directly?
      </h2>
      <p class="text-stone-400 mb-8 max-w-2xl mx-auto">
        Some conversations are better had in person. If you prefer to begin 
        with a call, we welcome the opportunity to connect directly.
      </p>
      <div class="flex flex-col md:flex-row items-center justify-center gap-8">
        <div>
          <p class="text-xs uppercase tracking-widest text-gold-500 mb-2">Email</p>
          <a href="mailto:journey@baliencore.com" class="text-stone-50 hover:text-gold-400 transition-colors">
            journey@baliencore.com
          </a>
        </div>
        <div class="hidden md:block w-px h-12 bg-stone-700"></div>
        <div>
          <p class="text-xs uppercase tracking-widest text-gold-500 mb-2">WhatsApp</p>
          <a href="tel:+62123456789" class="text-stone-50 hover:text-gold-400 transition-colors">
            +62 123 456 789
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Closing -->
  <section class="section-padding bg-stone-50">
    <div class="max-w-3xl mx-auto text-center">
      <div class="divider divider-center mb-12"></div>
      <p class="font-serif text-2xl md:text-3xl text-stone-900 leading-relaxed">
        "The journey of a thousand miles begins with a single step."
      </p>
      <p class="text-stone-500 mt-6">â€” Lao Tzu</p>
      <p class="text-stone-600 mt-8">
        You have taken that step. We look forward to walking beside you.
      </p>
    </div>
  </section>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('journeyForm');
    
    form?.addEventListener('submit', (e) => {
      e.preventDefault();
      
      const firstName = (document.getElementById('firstName') as HTMLInputElement)?.value || '';
      const lastName = (document.getElementById('lastName') as HTMLInputElement)?.value || '';
      const email = (document.getElementById('email') as HTMLInputElement)?.value || '';
      const phone = (document.getElementById('phone') as HTMLInputElement)?.value || '';
      const travelers = (document.getElementById('travelers') as HTMLSelectElement)?.value || '';
      const duration = (document.getElementById('duration') as HTMLSelectElement)?.value || '';
      const timing = (document.getElementById('timing') as HTMLInputElement)?.value || '';
      const seeking = (document.getElementById('seeking') as HTMLTextAreaElement)?.value || '';
      const transformation = (document.getElementById('transformation') as HTMLTextAreaElement)?.value || '';
      const anything = (document.getElementById('anything') as HTMLTextAreaElement)?.value || '';
      
      const pillarsChecked = document.querySelectorAll('input[name="pillars"]:checked');
      const pillars = Array.from(pillarsChecked).map((cb: Element) => (cb as HTMLInputElement).value).join(', ');
      
      const message = `*New Journey Inquiry from Bali Encore*

*About the Traveler:*
Name: ${firstName} ${lastName}
Email: ${email}
Phone: ${phone || 'Not provided'}

*Journey Details:*
Travelers: ${travelers || 'Not specified'}
Duration: ${duration || 'Not specified'}
Timing: ${timing || 'Not specified'}

*Intentions:*
Pillars: ${pillars || 'None selected'}

What they're seeking:
${seeking || 'Not provided'}

Desired transformation:
${transformation || 'Not provided'}

Additional notes:
${anything || 'None'}`;

      const whatsappNumber = '62123456789';
      const encodedMessage = encodeURIComponent(message);
      const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${encodedMessage}`;
      
      window.open(whatsappUrl, '_blank');
    });
  });
</script>
