    <div class="max-w-4xl mx-auto text-center">
      <div class="reveal">
        <p class="text-gold-600 text-xs uppercase tracking-[0.3em] mb-6">Moments from the Journey</p>
        <div class="divider divider-center mb-12"></div>
      </div>
      <div class="prose-luxury reveal">
